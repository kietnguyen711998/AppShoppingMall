<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProductDetail">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarchitietsp"
        app:title="Products Detail"
        android:background="#7A4B4B"
        app:titleTextColor="#EEE8E8"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/imagechitietsanpham"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp">
        </ImageView>
        <LinearLayout
            android:weightSum="4"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:id="@+id/textviewtenchitietsanpham"
                android:text="Ten san pham"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_weight="1"
                android:id="@+id/textviewgiachitietsanpham"
                android:text="Gia san pham"
                android:textColor="#f20"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <Spinner
                android:layout_weight="1"
                android:background="@drawable/spinner"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:id="@+id/spinners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
            <Button
                android:layout_weight="1"
                android:textColor="#79832E"
                android:id="@+id/buttondatmua"
                android:text="Add to Cart"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Button>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="#8BC34A"
            android:layout_marginTop="5dp"
            android:textSize="30sp"
            android:text="Mo Ta Chi Tiet San Pham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_vertical|right"
                android:id="@+id/textviewmotachitietsanpham"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </ScrollView>
    </LinearLayout>
</LinearLayout>